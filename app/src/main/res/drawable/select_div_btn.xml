<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
        <shape>
            <stroke android:color="@color/div_color"
                android:width="1dp"
                />
            <corners android:bottomLeftRadius="@dimen/x6" android:bottomRightRadius="@dimen/x6" android:topLeftRadius="@dimen/x6" android:topRightRadius="@dimen/x6" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:bottomLeftRadius="@dimen/x6" android:bottomRightRadius="@dimen/x6" android:topLeftRadius="@dimen/x6" android:topRightRadius="@dimen/x6" />
            <stroke android:color="@color/div_color"
                android:width="1dp"
                />
        </shape>
    </item>
</selector>