<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_meal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.mrqiu.photoshop.ui.activity.MealActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x32"
        android:paddingBottom="@dimen/x4"
        android:paddingLeft="@dimen/padding_horizontal"
        android:paddingRight="@dimen/padding_horizontal"
        android:paddingTop="@dimen/x4">

        <ImageButton
            android:id="@+id/meal_ib_back"
            android:layout_width="@dimen/x32"
            android:layout_height="match_parent"
            android:background="@color/colorNull"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/meal_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/BMUpdateTitle"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/t16" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/meal_iv_icon_cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x140"
                android:scaleType="fitXY"
                android:src="@drawable/test_icon_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:background="@color/white"
                android:paddingBottom="@dimen/padding_vertical"
                android:paddingLeft="@dimen/padding_horizontal"
                android:paddingRight="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_vertical">

                <TextView
                    android:id="@+id/meal_tv_price_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/margin_horizontal"
                    android:text="¥"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/t14" />

                <TextView
                    android:id="@+id/meal_tv_price_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/x6"
                    android:layout_toRightOf="@+id/meal_tv_price"
                    android:text="¥599"
                    android:textSize="@dimen/t12" />


                <LinearLayout
                    android:clickable="true"
                    android:id="@+id/meal_ll_collect"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="@dimen/x4"
                        android:id="@+id/meal_iv_collect"
                        android:layout_width="@dimen/x32"
                        android:layout_height="@dimen/x32"
                        android:src="@drawable/collect_normal" />
                    <TextView
                        android:id="@+id/meal_tv_collect_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_horizontal"
                        android:layout_marginRight="@dimen/margin_horizontal"
                        android:text="12" />
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="@dimen/x4"
                    android:id="@+id/meal_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/meal_tv_price_1"
                    android:layout_toRightOf="@+id/meal_tv_price_1"
                    android:text="399"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/t16" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/meal_iv_shop_icon"
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/x32"
                    android:layout_marginLeft="@dimen/margin_horizontal"
                    android:padding="@dimen/x6"
                    android:src="@drawable/home_btn_shop_normal" />

                <TextView
                    android:id="@+id/meal_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/meal_iv_shop_icon"
                    android:layout_alignTop="@id/meal_iv_shop_icon"
                    android:layout_marginLeft="@dimen/x4"
                    android:layout_toRightOf="@+id/meal_iv_shop_icon"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="五一促销活动让你更幸福，留住青春"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/t14" />

                <ImageView
                    android:id="@+id/meal_iv_msg_icon"
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/x32"
                    android:layout_below="@+id/meal_iv_shop_icon"
                    android:layout_marginLeft="@dimen/margin_horizontal"
                    android:padding="@dimen/x6"
                    android:scaleType="fitXY"
                    android:src="@drawable/msg_icon" />

                <TextView
                    android:id="@+id/meal_tv_introduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/meal_iv_msg_icon"
                    android:layout_alignTop="@id/meal_iv_msg_icon"
                    android:layout_marginLeft="@dimen/x4"
                    android:layout_toRightOf="@+id/meal_iv_shop_icon"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="五一促销活动让你更幸福，留住青春d"
                    android:textSize="@dimen/t12" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                android:background="@color/white"
                android:paddingBottom="@dimen/padding_vertical"
                android:paddingLeft="@dimen/margin_horizontal"
                android:paddingTop="@dimen/padding_vertical"
                android:text="活动详情" />
            <include layout="@layout/div_x"/>
            <FrameLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding_vertical"
                android:paddingLeft="@dimen/padding_horizontal"
                android:paddingRight="@dimen/padding_horizontal"
                android:paddingTop="@dimen/padding_vertical">

                <TextView
                    android:id="@+id/meal_tv_describe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBgGray"
                    android:padding="@dimen/padding"
                    android:text="@string/meal_msg"
                    android:textSize="@dimen/t12" />
            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/meal_rv_icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical"
                />


        </LinearLayout>
    </ScrollView>

    <include layout="@layout/div_x" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x46"
        android:background="@color/white"
        android:paddingBottom="@dimen/padding_vertical"
        android:paddingLeft="@dimen/padding_horizontal"
        android:paddingRight="@dimen/padding_horizontal"
        android:paddingTop="@dimen/padding_vertical">

        <Button
            android:id="@+id/meal_btn_to_shop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/select_div_btn"
            android:text="查看店铺" />

        <Button
            android:id="@+id/meal_btn_to_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_horizontal"
            android:background="@drawable/select_btn"
            android:text="联系店家"
            android:textColor="@color/white"
            android:textSize="@dimen/t16" />
    </LinearLayout>
</LinearLayout>
